@model ExoticsOwnersRegistry.Models.Car

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container-fluid">
        <h4>Car</h4>
        <hr />
        <div class="form-inline">
            <!-- Display list of car Makers-->
            <div class="form-group">
                @Html.LabelFor(model => model.carMaker.makeName, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.carMaker.makeName, new { htmlAttributes = new { @class = "form-control" } })
                <!--Html.DropDownListFor(model => model.carMaker.makeName, new { htmlAttributes = new { class = "form-control" } }) -->
            </div>
            <!-- Display list of car Models -->
            <div class="form-group">
                @Html.LabelFor(model => model.carModel.modelName, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.carModel.modelName, new { htmlAttributes = new { @class = "form-control" } })
                <!--Html.DropDownListFor(model => model.subModelInfo.subModelName, new { htmlAttributes = new { class = "form-control" } }) -->
            </div>
            <!-- Display list of car submodels -->
            <div class="form-group">
                @Html.LabelFor(model => model.carSubModel.subModelName, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.carSubModel.subModelName, new { htmlAttributes = new { @class = "form-control" } })
                <!--Html.DropDownListFor(model => model.carSubModel.subModelName, new { htmlAttributes = new { class = "form-control" } }) -->
            </div>
        </div>

        <p></p>

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.VIN, htmlAttributes: new { @class = "control-label col-md-2" })
                <!--               <div class="col-md-12"> -->
                @Html.EditorFor(model => model.VIN, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.VIN, "", new { @class = "text-danger" })
                <!--                </div> -->
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.showCaseCarPicture, htmlAttributes: new { @class = "control-label col-md-2" })
                <!--               <div class="col-md-12"> -->
                <img src="" alt="Pict Not Available" class="img-thumbnail">
                <!--@Html.EditorFor(model => model.showCaseCarPicture) -->
                @Html.ValidationMessageFor(model => model.showCaseCarPicture, "", new { @class = "text-danger" })
                <!--                </div> -->
            </div>

            <!-- Place these 2 attribute on same line -->
            <div class="form-group">
                @Html.LabelFor(model => model.approvalStatus, htmlAttributes: new { @class = "control-label col-md-2" })
                <!--                <div class="col-md-4">-->
                @Html.EditorFor(model => model.approvalStatus, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.approvalStatus, "", new { @class = "text-danger" })
                <!--                </div>-->
                @Html.LabelFor(model => model.bHideCar, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="checkbox">
                    @Html.EditorFor(model => model.bHideCar)
                    @Html.ValidationMessageFor(model => model.bHideCar, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <!--               @Html.LabelFor(model => model.carDetails, htmlAttributes: new { @class = "control-label col-md-2" }) -->
                <div class="btn btn-default">
                    Add Details
                    <!--                      @Html.EditorFor(model => model.carDetails) -->
                    <!--                      @Html.ValidationMessageFor(model => model.carDetails, "", new { @class = "text-danger" }) -->
                </div>
            </div>

            <div class="form-group">
                <!--                @Html.LabelFor(model => model.makeID, htmlAttributes: new { @class = "control-label col-md-2" }) -->
                <!--               <div class="col-md-12"> -->
                <div class="btn btn-link">Add Owner</div>
                <!--                </div> -->
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-12">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
